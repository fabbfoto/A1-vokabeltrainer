{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@utils/*": ["shared/utils/*"],
      "@services/*": ["shared/services/*"]
    }
  },
  "include": [
    "*.ts",
    "shared/**/*",
    "packages/**/*"
, "vokabular_person.backup.js", "vokabular_lernen.js", "vokabular_Kommunikationsmittel.ts", "vokabular_wohnen.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}